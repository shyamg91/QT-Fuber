p(style={'font-family':'cursive','font-size':'20px','text-align':'center','color':'#009688'}) Available Drivers in a 2km Radius
  each driver in drivers
    form(method="POST" action=`/accept/${driver._id}`)
      if driver.status === 'idle'
        .drivers(style={'font-family':'cursive', 'display':'flex','flex-direction': 'row','justify-content': 'space-between','background': '#009688','margin': '10px auto','width': '50%','padding': '10px','box-shadow': '2px 5px rgba(45, 35, 35, 0.02)','color': '#fff'})
          .info(style={'width' : '60%'})
            p= driver.displayName
            p
              | Driving a #{driver.model.colour} #{driver.model.name}
          .action(style={'padding':'30px 20px','border-left' : '1px solid #fff','width':'40%','text-align':'center','font-size':'20px'})
            input(type="submit", value="Accept" style={'text-decoration':'none','color':'#fff','background':'none','outline':'none','font-family':'cursive','font-size':'24px','border':'none','cursor':'pointer'})
    
